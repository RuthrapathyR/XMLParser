<?xml version="1.0"?>
<project name="XMLParser" default="compile" basedir=".">

    <!-- Set up the directory properties -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="classes"/>
    <property name="main.class" value="com.pkg.xmlparser.XMLParser"/>
    <property name="subdir" value="result"/>
    <property name="appjar" value="App.jar"/>
    <property name="jar.name" value="DistDBDD.jar"/>


    
    <!-- Optionally, define the classpath -->
    <path id="classpath">
        <!-- Add external libraries here -->
    </path>

    <!-- Initialize directory structure -->
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${subdir}/${build.dir}"/>
    </target>

    <!-- Clean up build directories -->
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${subdir}"/>
    </target>

    <!-- Compile the Java source code -->
    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false">
            <classpath refid="classpath"/>
        </javac>
    </target>


    <!-- Compile the Result Java source code -->
    <target name="resultCompile" depends="init">
        <javac srcdir="${subdir}/${src.dir}" destdir="${subdir}/${build.dir}" includeantruntime="false">            
        </javac>
    </target>

    <!-- Run the Java application -->
    <target name="run" depends="compile">
        <java classname="${main.class}" classpath="${build.dir}">
            <!-- You can specify arguments here if your application requires them -->
            <!-- <arg value="arg1"/> -->
            <arg value="${DDFilePath}"/>
        </java>        
    </target>


    <!-- To make the result compiles classes as Jar -->
    <target name="jar" depends="compile">
        <antcall target="run"/>
        <antcall target="resultCompile"/>
        <jar destfile="${jar.name}" basedir="${subdir}/${build.dir}">
            <!-- If you have a manifest file, include it like this:
            <manifest>
                <attribute name="Main-Class" value="com.example.MainClass"/>
            </manifest>
            -->
        </jar>
        <antcall target="clean"/>
    </target>

    <target name="run-jar">
        <!-- Runs a JAR file directly. Assumes the JAR's manifest specifies the Main-Class -->
        <java jar="${appjar}" fork="true">
            <arg value="${DDFilePath}"/>
        </java>
        <antcall target="jar"/>
    </target>

    <target name="make-app-jar" depends="compile">
        <jar destfile="${appjar}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
    </target>

    
</project>
